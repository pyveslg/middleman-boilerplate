<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- For Bootstrap responsiveness -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>
    <% if current_page.data.description %>
    <meta name="description" content="<%= current_page.data.description %>">
    <% end %>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Meta Facebook -->
        <meta property="og:type" content="article">
        <meta property="og:url" content="http://www.smartexpat.fr">
        <meta property="og:image" content="http://smartexpat.fr/images/social/Facebook_Card_Smartexpat.png">
        <meta property="og:description" content="Cours particuliers en français général et professionnel à Paris.Immersion linguistique et culturelle. Apprenez le français autrement !">
        <meta property="og:site_name" content="Smartexpat">

        <!-- Meta Twitter -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:site" content="@SmartExpatParis">
        <meta name="twitter:title" content="Smartexpat">
        <meta name="twitter:description" content="Cours particuliers en français général et professionnel à Paris. Immersion linguistique et culturelle. Apprenez le français autrement !">
        <meta name="twitter:creator" content="@SmartExpatParis">
        <meta name="twitter:image:src" content="http://smartexpat.fr/images/social/Facebook_Card_Smartexpat.png">

        <meta itemprop="name" content="Smartexpat">
        <meta itemprop="description" content="Cours particuliers en français général et professionnel à Paris. Immersion linguistique et culturelle. Apprenez le français autrement !">
        <!-- Facebook image must be at least 600x315px -->
        <meta itemprop="image" content="http://smartexpat.fr/images/social/Facebook_Card_Smartexpat.png">


  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar" id="icon-bar"></span>
            <span class="icon-bar" id="icon-bar"></span>
            <span class="icon-bar" id="icon-bar"></span>
          </button>
          <% link_to "/index.html", class: "navbar-brand" do %>
            <%= image_tag "logo/Logo_Smartexpat_menu.png", id: "logo" %>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="<%= I18n.t("paths.certificates") %>">
                <i class="fa fa-graduation-cap"></i> <%= I18n.t(:certify) %>
              </a>
            </li>
            <li>
              <a href="/index.html">
                <%= image_tag "../images/english.png", id: "flag" %>
              </a>
            </li>
            <li>
              <a href="/fr/index.html">
                <%= image_tag "../images/fr_flag.png", id: "flag" %>
              </a>
            </li>

          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-1">
          </div>
          <div class="col-xs-11 text-left">
            <p>©2017 • Smartexpat • Cours particuliers de français à Paris • Tous droits réservés</p>
          </div>
        </div>
      </div>
    </div>
  <script src="https://unpkg.com/scrollreveal@3.3.2/dist/scrollreveal.min.js"></script>
  <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-91885612-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
